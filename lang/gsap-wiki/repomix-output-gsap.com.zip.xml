function flip(elements, changeFunc, vars) {  
  elements = gsap.utils.toArray(elements);  
  vars = vars || {};  
  let tl = gsap.timeline({  
      onComplete: vars.onComplete,  
      delay: vars.delay || 0,  
    }),  
    bounds = elements.map((el) => el.getBoundingClientRect()),  
    copy = {},  
